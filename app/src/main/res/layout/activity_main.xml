<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название товара" />

    <EditText
        android:id="@+id/etProductSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите размер товара"
        android:inputType="text" />

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="200dp"
        android:layout_height="176dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#41EC03"
        android:text="Добавить картинку" />

    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#41EC03"
        android:text="Добавить товар" />

    <Button
        android:id="@+id/btnDeleteAllProducts"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:text="Удалить все товары" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>